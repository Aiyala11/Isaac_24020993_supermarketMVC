<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://unpkg.com/event-source-polyfill"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .payment-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
            padding: 40px;
            max-width: 500px;
            width: 100%;
        }
        .qr-code {
            text-align: center;
            margin: 30px 0;
        }
        .qr-code img {
            max-width: 100%;
            height: auto;
            border: 2px solid #ddd;
            border-radius: 10px;
            padding: 10px;
            background: white;
        }
        .timer {
            font-size: 24px;
            font-weight: bold;
            color: #667eea;
            margin: 20px 0;
        }
        .status-message {
            text-align: center;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }
        .status-loading {
            background-color: #e3f2fd;
            color: #1976d2;
        }
        .status-success {
            background-color: #e8f5e9;
            color: #388e3c;
        }
        .status-error {
            background-color: #ffebee;
            color: #d32f2f;
        }
        .cancel-link {
            text-align: center;
            margin-top: 30px;
        }
        h1 {
            color: #333;
            margin-bottom: 10px;
        }
        .subtitle {
            color: #666;
            font-size: 16px;
            margin-bottom: 30px;
        }
    </style>
</head>
<body>
    <div class="payment-container">
        <h1>üí≥ NETS Payment</h1>
        <p class="subtitle">Scan the QR code with your bank app to pay</p>
        
        <div class="qr-code">
            <img src="<%= qrCodeUrl %>" alt="NETS QR Code" id="qr-image"/>
        </div>
        
        <div id="status" class="status-message status-loading">
            ‚è≥ Waiting for payment...
        </div>
        
        <div class="timer text-center" id="timer">
            Time remaining: <span id="timer-text">5:00</span>
        </div>

        <div class="text-center mb-3">
            <p class="text-muted">Amount: <strong>$<%= total.toFixed(2) %></strong></p>
        </div>

        <div class="cancel-link">
            <a href="/payment" class="btn btn-outline-secondary">Cancel Payment</a>
        </div>
    </div>

    <script>
        let s2sNetsTxnStatus;

        if (s2sNetsTxnStatus) {
            s2sNetsTxnStatus.close();
        }

        const txnRetrievalRef = "<%= txnRetrievalRef %>";
        const url = `/sse/payment-status/${txnRetrievalRef}`;
        const statusDiv = document.getElementById("status");
        const timerElement = document.getElementById("timer-text");

        const headers = {
            "api-key": "<%= apiKey %>",
            "project-id": "<%= projectId %>",
        };

        console.log("NETS QR Payment initialized for transaction:", txnRetrievalRef);

        s2sNetsTxnStatus = new EventSourcePolyfill(url, {
            headers: headers,
            heartbeatTimeout: 150000,
        });

        s2sNetsTxnStatus.addEventListener("message", (event) => {
            const data = JSON.parse(event.data);
            console.log("NETS Query Response:", data);

            if (data.success) {
                statusDiv.textContent = "‚úÖ Payment Successful!";
                statusDiv.className = "status-message status-success";
                if (s2sNetsTxnStatus) s2sNetsTxnStatus.close();
                
                // Store the transaction reference and redirect to success
                sessionStorage.setItem('lastNetsTransaction', txnRetrievalRef);
                setTimeout(() => {
                    window.location.href = `/nets-qr/success?txn_retrieval_ref=${txnRetrievalRef}`;
                }, 2000);
            } else if (data.fail) {
                statusDiv.textContent = "‚ùå Payment Failed. Please try again.";
                statusDiv.className = "status-message status-error";
                if (s2sNetsTxnStatus) s2sNetsTxnStatus.close();
                
                setTimeout(() => {
                    window.location.href = `/nets-qr/fail?txn_retrieval_ref=${txnRetrievalRef}`;
                }, 3000);
            }
        });

        s2sNetsTxnStatus.addEventListener("error", (event) => {
            console.error("EventSource error:", event);
            statusDiv.textContent = "‚ö†Ô∏è Connection error. Please refresh the page.";
            statusDiv.className = "status-message status-error";
        });

        // Countdown Timer Logic
        const countdownDuration = 300; // 5 minutes
        let remainingTime = countdownDuration;

        const updateTimer = () => {
            const minutes = Math.floor(remainingTime / 60);
            const seconds = remainingTime % 60;
            timerElement.textContent = `${minutes}:${seconds.toString().padStart(2, "0")}`;
            remainingTime--;

            if (remainingTime < 0) {
                clearInterval(timerInterval);
                timerElement.textContent = "Expired";
                statusDiv.textContent = "‚è∞ Transaction timed out.";
                statusDiv.className = "status-message status-error";

                if (s2sNetsTxnStatus) {
                    s2sNetsTxnStatus.close();
                }
                
                setTimeout(() => {
                    window.location.href = `/nets-qr/fail?txn_retrieval_ref=${txnRetrievalRef}`;
                }, 2000);
            }
        };

        const timerInterval = setInterval(updateTimer, 1000);
        updateTimer();
    </script>
</body>
</html>
