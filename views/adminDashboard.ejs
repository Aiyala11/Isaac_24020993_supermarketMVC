<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <link href="/css/style.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Admin Dashboard - Isaac's Supermarket</title>
  <style>
    body { background: #f6fbf6; font-family: 'Sora','Inter','Segoe UI',sans-serif; }
    .dashboard-header { background: linear-gradient(135deg, #28a745 0%, #20c997 100%); color: white; padding: 40px 20px; margin-bottom: 40px; border-radius: 0; box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3); }
    .dashboard-header h1 { font-size: 32px; font-weight: 700; margin-bottom: 8px; }
    .dashboard-header p { font-size: 16px; opacity: 0.95; margin: 0; }
    .dashboard-container { max-width: 1200px; margin: 0 auto; padding: 0 1rem 40px; }
    .stat-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 40px; }
    .stat-card { background: white; border-radius: 12px; padding: 24px; box-shadow: 0 2px 12px rgba(0,0,0,0.08); border-left: 4px solid #28a745; transition: transform 0.2s, box-shadow 0.2s; }
    .stat-card:hover { transform: translateY(-4px); box-shadow: 0 8px 24px rgba(40, 167, 69, 0.15); }
    .stat-number { font-size: 32px; font-weight: 700; color: #28a745; margin-bottom: 8px; }
    .stat-label { font-size: 14px; color: #666; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; }
    .stat-icon { font-size: 24px; color: #28a745; opacity: 0.3; text-align: right; margin-top: -8px; }
    .action-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(240px, 1fr)); gap: 20px; }
    .action-card { background: white; border-radius: 12px; padding: 28px 24px; box-shadow: 0 2px 12px rgba(0,0,0,0.08); text-decoration: none; color: inherit; display: flex; flex-direction: column; align-items: center; text-align: center; transition: all 0.3s ease; cursor: pointer; }
    .action-card:hover { transform: translateY(-6px); box-shadow: 0 8px 24px rgba(40, 167, 69, 0.2); color: inherit; }
    .action-icon { font-size: 48px; color: #28a745; margin-bottom: 16px; }
    .action-title { font-size: 18px; font-weight: 700; color: #2d4737; margin-bottom: 8px; }
    .action-desc { font-size: 13px; color: #999; line-height: 1.4; }
    .section-title { font-size: 20px; font-weight: 700; color: #2d4737; margin-top: 40px; margin-bottom: 24px; padding-bottom: 12px; border-bottom: 2px solid #e8f1eb; }
    .recent-table { background: white; border-radius: 12px; overflow: hidden; box-shadow: 0 2px 12px rgba(0,0,0,0.08); }
    .recent-table thead { background: linear-gradient(135deg, #28a745 0%, #20c997 100%); color: white; font-weight: 600; }
    .recent-table tbody tr { border-bottom: 1px solid #f0f0f0; transition: all 0.2s ease; }
    .recent-table tbody tr:hover { background-color: #f8f9fa; box-shadow: inset 0 0 10px rgba(40, 167, 69, 0.05); }
    .empty-state { background: white; border-radius: 12px; padding: 40px; text-align: center; color: #999; box-shadow: 0 2px 12px rgba(0,0,0,0.08); }
    @media (max-width: 768px) { .stat-grid { grid-template-columns: repeat(2, 1fr); } .action-grid { grid-template-columns: 1fr; } .dashboard-header h1 { font-size: 24px; } }
  </style>
</head>
<body>

  <%- include('partials/adminnavbar') %>

  <!-- DASHBOARD HEADER -->
  <div class="dashboard-header">
    <div class="dashboard-container">
      <h1><i class="bi bi-speedometer2"></i> Admin Dashboard</h1>
      <p>Welcome back, <%= user.username %>! Here's your business overview.</p>
    </div>
  </div>

  <!-- MAIN CONTENT -->
  <div class="dashboard-container">

    <!-- STATS SECTION -->
    <div class="stat-grid">
      <div class="stat-card">
        <div class="stat-number"><%= stats.totalUsers %></div>
        <div class="stat-label">Total Users</div>
        <div class="stat-icon"><i class="bi bi-people-fill"></i></div>
      </div>

      <div class="stat-card">
        <div class="stat-number"><%= stats.totalAdmins %></div>
        <div class="stat-label">Admin Accounts</div>
        <div class="stat-icon"><i class="bi bi-shield-check"></i></div>
      </div>

      <div class="stat-card">
        <div class="stat-number"><%= stats.totalProducts %></div>
        <div class="stat-label">Products</div>
        <div class="stat-icon"><i class="bi bi-box-seam"></i></div>
      </div>

      <div class="stat-card">
        <div class="stat-number"><%= stats.lowStockCount %></div>
        <div class="stat-label">Low Stock Items</div>
        <div class="stat-icon"><i class="bi bi-exclamation-triangle"></i></div>
      </div>

      <div class="stat-card">
        <div class="stat-number"><%= stats.totalOrders %></div>
        <div class="stat-label">Total Orders</div>
        <div class="stat-icon"><i class="bi bi-receipt"></i></div>
      </div>

      <div class="stat-card">
        <div class="stat-number">$<%= stats.totalRevenue.toFixed(2) %></div>
        <div class="stat-label">Total Revenue</div>
        <div class="stat-icon"><i class="bi bi-cash-coin"></i></div>
      </div>
    </div>

    <!-- QUICK ACTIONS -->
    <div class="section-title"><i class="bi bi-lightning-charge"></i> Quick Actions</div>
    <div class="action-grid">
      <a href="/admin/users" class="action-card">
        <i class="bi bi-people action-icon"></i>
        <div class="action-title">Manage Users</div>
        <p class="action-desc">View, edit, and manage user accounts</p>
      </a>

      <a href="/admin/admins" class="action-card">
        <i class="bi bi-shield-fill action-icon"></i>
        <div class="action-title">Manage Admins</div>
        <p class="action-desc">Manage admin accounts and permissions</p>
      </a>

      <a href="/inventory" class="action-card">
        <i class="bi bi-box-seam action-icon"></i>
        <div class="action-title">Inventory</div>
        <p class="action-desc">Manage products and stock levels</p>
      </a>

      <a href="/admin/orders" class="action-card">
        <i class="bi bi-receipt action-icon"></i>
        <div class="action-title">View Orders</div>
        <p class="action-desc">Track and manage all customer orders</p>
      </a>

      <a href="/addProduct" class="action-card">
        <i class="bi bi-plus-circle action-icon"></i>
        <div class="action-title">Add Product</div>
        <p class="action-desc">Create new product listings</p>
      </a>

      <a href="/admin/analytics" class="action-card">
        <i class="bi bi-graph-up action-icon"></i>
        <div class="action-title">Analytics</div>
        <p class="action-desc">View inventory and sales analytics</p>
      </a>
    </div>

    <!-- RECENT ORDERS PREVIEW -->
    <div class="section-title"><i class="bi bi-clock-history"></i> Recent Orders</div>
    <% if (recentOrders && recentOrders.length > 0) { %>
      <div class="recent-table">
        <table class="table table-hover mb-0">
          <thead>
            <tr>
              <th>Order ID</th>
              <th>Customer</th>
              <th>Amount</th>
              <th>Status</th>
              <th>Date</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% recentOrders.forEach(order => { %>
              <tr>
                <td>#<%= order.id %></td>
                <td><%= order.username %></td>
                <td><strong>$<%= Number(order.totalAmount).toFixed(2) %></strong></td>
                <td><span class="badge bg-success"><%= order.status %></span></td>
                <td><small><%= new Date(order.createdAt).toLocaleDateString() %></small></td>
                <td><a href="/invoice/<%= order.id %>" class="btn btn-sm btn-info"><i class="bi bi-eye"></i> View</a></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="empty-state">
        <p><i class="bi bi-inbox"></i> No orders yet</p>
      </div>
    <% } %>

  </div>

</body>
</html>
