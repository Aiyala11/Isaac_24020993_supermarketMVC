<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>User Management - Isaac's Supermarket</title>
  <style>
    body { background-color: #f8f9fa; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
    .page-header { background: linear-gradient(135deg, #28a745 0%, #20c997 100%); color: white; padding: 2rem 0; margin-bottom: 2rem; border-radius: 0.5rem; box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3); }
    .page-header h1 { font-weight: 700; margin-bottom: 0.5rem; }
    .page-header p { font-size: 0.95rem; opacity: 0.95; margin: 0; }
    .users-table { background: white; border-radius: 0.75rem; overflow: hidden; box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08); }
    .users-table thead { background: linear-gradient(135deg, #28a745 0%, #20c997 100%); color: white; font-weight: 600; }
    .users-table tbody tr { border-bottom: 1px solid #f0f0f0; transition: all 0.2s ease; }
    .users-table tbody tr:hover { background-color: #f8f9fa; box-shadow: inset 0 0 10px rgba(40, 167, 69, 0.05); }
    .role-badge { display: inline-block; padding: 4px 12px; border-radius: 20px; font-size: 12px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; }
    .role-admin { background-color: #e3f2fd; color: #1976d2; }
    .role-user { background-color: #f3e5f5; color: #7b1fa2; }
    .action-buttons { display: flex; gap: 0.5rem; justify-content: center; }
    .action-buttons a, .action-buttons button { padding: 0.4rem 0.8rem; font-size: 0.85rem; border-radius: 0.4rem; text-decoration: none; transition: all 0.2s ease; border: none; cursor: pointer; }
    .edit-btn { background-color: #0dcaf0; color: white; }
    .edit-btn:hover { background-color: #0bb5e3; transform: translateY(-2px); }
    .delete-btn { background-color: #dc3545; color: white; }
    .delete-btn:hover { background-color: #c82333; transform: translateY(-2px); }
    .search-section { background: white; padding: 1.5rem; border-radius: 0.75rem; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08); margin-bottom: 2rem; }
    .search-section .form-control { border-color: #dee2e6; border-radius: 0.5rem; }
    .search-section .form-control:focus { border-color: #28a745; box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25); }
    .empty-state { background: white; border-radius: 0.75rem; padding: 3rem; text-align: center; color: #999; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08); }
    @media (max-width: 768px) { .action-buttons { flex-direction: column; } .action-buttons a, .action-buttons button { width: 100%; text-align: center; } .users-table { font-size: 0.85rem; } }
  </style>
</head>
<body>

  <%- include('partials/adminnavbar') %>

  <!-- Styled Delete Confirmation Modal -->
  <div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header bg-danger text-white">
          <h5 class="modal-title" id="deleteConfirmLabel"><i class="bi bi-exclamation-triangle-fill"></i> Confirm Delete</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p class="text-dark mb-3"><strong>Are you sure you want to delete this user?</strong></p>
          <p class="text-muted mb-0"><em>This action cannot be undone. All user data will be permanently removed from the system.</em></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <a href="#" id="deleteConfirmBtn" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete User
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid mt-4 px-4">
    <!-- PAGE HEADER -->
    <div class="page-header">
      <div class="container-fluid">
        <h1><i class="bi bi-people"></i> User Management</h1>
        <p>View, edit, and manage all user accounts</p>
      </div>
    </div>

    <!-- MESSAGES -->
    <% if (messages && messages.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
        <% messages.forEach(function(message) { %>
          <p class="mb-1"><%= message %></p>
        <% }); %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <% if (errors && errors.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
        <% errors.forEach(function(error) { %>
          <p class="mb-1"><%= error %></p>
        <% }); %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <!-- SEARCH SECTION -->
    <div class="search-section">
      <div class="row g-3">
        <div class="col-md-6">
          <label for="searchInput" class="form-label fw-500">Search Users</label>
          <input type="text" class="form-control form-control-lg" id="searchInput" placeholder="ðŸ” Search by name, email, or role...">
        </div>
        <div class="col-md-6 d-flex align-items-end">
          <button class="btn btn-secondary w-100" id="resetBtn">Reset Search</button>
        </div>
      </div>
    </div>

    <!-- USERS TABLE -->
    <% if (users && users.length > 0) { %>
      <div class="users-table table-responsive">
        <table class="table table-hover mb-0" id="usersTable">
          <thead>
            <tr>
              <th width="80" class="text-center">ID</th>
              <th width="150">Username</th>
              <th width="200">Email</th>
              <th width="150">Address</th>
              <th width="120">Contact</th>
              <th width="100" class="text-center">Role</th>
              <th width="180" class="text-center">Actions</th>
            </tr>
          </thead>
          <tbody id="userTableBody">
            <% users.forEach(u => { %>
              <tr class="user-row" data-username="<%= u.username.toLowerCase() %>" data-email="<%= u.email.toLowerCase() %>" data-role="<%= u.role.toLowerCase() %>">
                <td class="text-center fw-bold">#<%= u.id %></td>
                <td><%= u.username %></td>
                <td><small><%= u.email %></small></td>
                <td><small><%= u.address || 'N/A' %></small></td>
                <td><small><%= u.contact || 'N/A' %></small></td>
                <td class="text-center">
                  <span class="role-badge <%= u.role === 'admin' ? 'role-admin' : 'role-user' %>">
                    <%= u.role %>
                  </span>
                </td>
                <td>
                  <div class="action-buttons">
                    <a href="/admin/users/<%= u.id %>/edit" class="edit-btn" title="Edit User">
                      <i class="bi bi-pencil"></i> Edit
                    </a>
                    <% if (u.id != user.id) { %>
                      <button type="button" class="delete-btn" title="Delete User" onclick="showDeleteModal('<%= u.id %>', '<%= u.username %>')">
                        <i class="bi bi-trash"></i> Delete
                      </button>
                    <% } else { %>
                      <button class="btn btn-sm btn-secondary" disabled title="Cannot delete your own account">
                        <i class="bi bi-trash"></i> Delete
                      </button>
                    <% } %>
                  </div>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="empty-state">
        <i class="bi bi-inbox" style="font-size: 48px; opacity: 0.5;"></i>
        <p style="margin-top: 1rem;">No users found</p>
      </div>
    <% } %>

  </div>

  <script>
    // Delete confirmation modal
    const deleteModal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
    
    function showDeleteModal(userId, username) {
      document.getElementById('deleteConfirmBtn').href = `/admin/users/${userId}/delete`;
      deleteModal.show();
    }

    // Search functionality
    const searchInput = document.getElementById('searchInput');
    const resetBtn = document.getElementById('resetBtn');
    const userRows = document.querySelectorAll('.user-row');

    searchInput.addEventListener('keyup', function() {
      const searchTerm = this.value.toLowerCase();
      userRows.forEach(row => {
        const username = row.getAttribute('data-username');
        const email = row.getAttribute('data-email');
        const role = row.getAttribute('data-role');

        if (username.includes(searchTerm) || email.includes(searchTerm) || role.includes(searchTerm)) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      });
    });

    resetBtn.addEventListener('click', function() {
      searchInput.value = '';
      userRows.forEach(row => row.style.display = '');
    });
  </script>

</body>
</html>
