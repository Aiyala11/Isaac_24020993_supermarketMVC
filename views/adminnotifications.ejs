<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Order Notifications</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

  <style>
    .product-box {
      border: 1px solid #ddd;
      padding: 10px;
      border-radius: 6px;
      background: #fafafa;
      height: 100%;
      text-align: center;
      font-size: 15px;
    }
  </style>
</head>
<body class="bg-light">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
  <div class="container">
    <a class="navbar-brand" href="/inventory">Supermarket App</a>
    <div>
      <a href="/inventory" class="nav-link d-inline text-light">Inventory</a>
      <a href="/admin/orders" class="nav-link d-inline text-light">Orders</a>
      <a href="/logout" class="nav-link d-inline text-light">Logout</a>
    </div>
  </div>
</nav>

<div class="container">
  <h2 class="mb-4">Order Notifications</h2>

  <% if (!orders || orders.length === 0) { %>
    <div class="alert alert-info">No orders yet.</div>

  <% } else { %>

    <% orders.forEach(o => { %>

      <div class="border p-3 mb-4 bg-white shadow-sm">
        
        <!-- Header -->
        <div class="mb-2">
          <strong>[<%= o.username %> placed an order:]</strong>
        </div>

        <hr class="mt-2 mb-3">

        <!-- Convert o.items CSV â†’ Array -->
        <% let itemsArray = o.items ? o.items.split(', ') : []; %>

        <!-- Display 4 per row -->
        <div class="row">
          <% itemsArray.forEach((item, index) => { %>

            <div class="col-md-3 mb-3">
              <div class="product-box">
                <%= item %>
              </div>
            </div>

            <% if ((index + 1) % 4 === 0) { %>
              </div><div class="row">
            <% } %>

          <% }); %>
        </div>

        <hr class="mt-3 mb-2">

        <!-- Total -->
        <div class="text-end">
          <strong>Total price: $<%= (o.total || 0).toFixed(2) %></strong>

        </div>

      </div>

    <% }) %>

  <% } %>
</div>

</body>
</html>
