<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <link href="/css/style.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.js"></script>
  <title>Analytics - Isaac's Supermarket</title>
  <style>
    body { background: #f6fbf6; font-family: 'Sora','Inter','Segoe UI',sans-serif; }
    .analytics-header { background: linear-gradient(135deg, #28a745 0%, #20c997 100%); color: white; padding: 30px 20px; margin-bottom: 30px; }
    .analytics-header h1 { font-size: 28px; font-weight: 700; margin-bottom: 8px; }
    .analytics-header p { font-size: 14px; opacity: 0.95; margin: 0; }
    .analytics-container { max-width: 1400px; margin: 0 auto; padding: 0 1rem 40px; }
    .metric-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 40px; }
    .metric-card { background: white; border-radius: 12px; padding: 24px; box-shadow: 0 2px 12px rgba(0,0,0,0.08); border-left: 4px solid #28a745; }
    .metric-number { font-size: 28px; font-weight: 700; color: #28a745; margin-bottom: 8px; }
    .metric-label { font-size: 13px; color: #666; font-weight: 600; text-transform: uppercase; }
    .chart-section { background: white; border-radius: 12px; padding: 24px; box-shadow: 0 2px 12px rgba(0,0,0,0.08); margin-bottom: 30px; }
    .chart-title { font-size: 18px; font-weight: 700; color: #2d4737; margin-bottom: 20px; }
    .chart-container { position: relative; width: 100%; height: 400px; }
    .chart-container.small { height: 350px; }
    .charts-row { display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 40px; }
    .table-section { background: white; border-radius: 12px; overflow: hidden; box-shadow: 0 2px 12px rgba(0,0,0,0.08); margin-bottom: 30px; }
    .table-title { font-size: 16px; font-weight: 700; color: #2d4737; padding: 24px; border-bottom: 2px solid #e8f1eb; }
    .analytics-table { border-collapse: collapse; width: 100%; }
    .analytics-table thead { background: linear-gradient(135deg, #28a745 0%, #20c997 100%); color: white; }
    .analytics-table tbody tr:hover { background-color: #f8f9fa; }
    .analytics-table td { padding: 16px 24px; border-bottom: 1px solid #f0f0f0; }
    .analytics-table th { padding: 16px 24px; }
    .back-btn { color: #28a745; text-decoration: none; font-weight: 600; margin-bottom: 20px; display: inline-block; }
    @media (max-width: 768px) { .charts-row { grid-template-columns: 1fr; } }
  </style>
</head>
<body>
  <%- include('partials/adminnavbar') %>

  <!-- ANALYTICS HEADER -->
  <div class="analytics-header">
    <div class="analytics-container">
      <a href="/admin/dashboard" class="back-btn"><i class="bi bi-arrow-left"></i> Back to Dashboard</a>
      <h1><i class="bi bi-graph-up"></i> Sales & Inventory Analytics</h1>
      <p>Track your business performance and inventory insights</p>
    </div>
  </div>

  <!-- MAIN CONTENT -->
  <div class="analytics-container">

    <!-- KEY METRICS -->
    <div class="metric-grid">
      <div class="metric-card">
        <div class="metric-number"><%= totalOrders %></div>
        <div class="metric-label">Total Orders</div>
      </div>
      <div class="metric-card">
        <div class="metric-number">$<%= averageOrderValue.toFixed(2) %></div>
        <div class="metric-label">Avg Order Value</div>
      </div>
      <div class="metric-card">
        <div class="metric-number">$<%= inventoryValue %></div>
        <div class="metric-label">Total Inventory Value</div>
      </div>
      <div class="metric-card">
        <div class="metric-number"><%= lowStockProducts.length %></div>
        <div class="metric-label">Low Stock Items</div>
      </div>
      <div class="metric-card">
        <div class="metric-number"><%= products.length %></div>
        <div class="metric-label">Total Products</div>
      </div>
      <div class="metric-card">
        <div class="metric-number"><%= orders.length %></div>
        <div class="metric-label">All Transactions</div>
      </div>
    </div>

    <!-- LINE CHART - SALES REVENUE TREND -->
    <div class="chart-section">
      <div class="chart-title"><i class="bi bi-graph-up-arrow"></i> Sales Revenue Trend</div>
      <div class="chart-container">
        <canvas id="revenueChart"></canvas>
      </div>
    </div>

    <!-- TOP 5 PRODUCTS & PIE CHART SIDE BY SIDE -->
    <div class="charts-row">
      <div class="chart-section">
        <div class="chart-title"><i class="bi bi-bar-chart"></i> Top 5 Most Purchased Products</div>
        <div class="chart-container small">
          <canvas id="topProductsChart"></canvas>
        </div>
      </div>
      <div class="chart-section">
        <div class="chart-title"><i class="bi bi-pie-chart-fill"></i> Category Purchase Distribution</div>
        <div class="chart-container small">
          <canvas id="categoryPieChart"></canvas>
        </div>
      </div>
    </div>

    <!-- TOP 5 TABLE -->
    <div class="table-section">
      <div class="table-title"><i class="bi bi-star-fill"></i> Top 5 Best Sellers</div>
      <% if (topProducts && topProducts.length > 0) { %>
        <table class="analytics-table">
          <thead>
            <tr>
              <th>Product Name</th>
              <th>Units Sold</th>
              <th>Unit Price</th>
              <th>Total Revenue</th>
            </tr>
          </thead>
          <tbody>
            <% topProducts.forEach(p => { %>
              <tr>
                <td><strong><%= p.productName %></strong></td>
                <td><%= p.quantity %></td>
                <td>$<%= p.price.toFixed(2) %></td>
                <td><strong>$<%= (p.price * p.quantity).toFixed(2) %></strong></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <div style="padding: 24px; text-align: center; color: #999;">No sales data available</div>
      <% } %>
    </div>

    <!-- Hidden data containers for charts -->
    <script id="chartData" type="application/json">
      {
        "revenueByDate": <%= JSON.stringify(revenueByDate || []) %>,
        "topProducts": <%= JSON.stringify(topProducts || []) %>,
        "salesByCategory": <%= JSON.stringify(salesByCategory || []) %>
      }
    </script>

  </div>

  <script>
    // Read data from hidden JSON element
    const chartDataElement = document.getElementById('chartData');
    const chartData = JSON.parse(chartDataElement.textContent);
    
    const { revenueByDate, topProducts, salesByCategory } = chartData;
    
    console.log('üìä Analytics data loaded:', { revenueByDate, topProducts, salesByCategory });

    const chartConfig = {
      responsive: true,
      maintainAspectRatio: false
    };

    // LINE CHART - Sales Revenue
    if (Array.isArray(revenueByDate) && revenueByDate.length > 0) {
      try {
        const ctx1 = document.getElementById('revenueChart').getContext('2d');
        new Chart(ctx1, {
          type: 'line',
          data: {
            labels: revenueByDate.map(r => r.date),
            datasets: [{
              label: 'Daily Revenue ($)',
              data: revenueByDate.map(r => r.revenue),
              borderColor: '#28a745',
              backgroundColor: 'rgba(40, 167, 69, 0.1)',
              borderWidth: 3,
              fill: true,
              tension: 0.4,
              pointRadius: 5,
              pointBackgroundColor: '#28a745',
              pointBorderColor: '#fff',
              pointBorderWidth: 2
            }]
          },
          options: {
            ...chartConfig,
            plugins: { legend: { position: 'top' } },
            scales: { y: { beginAtZero: true } }
          }
        });
        console.log('‚úì Line chart rendered');
      } catch(e) { console.error('‚ùå Line chart error:', e); }
    } else {
      console.warn('‚ö†Ô∏è No revenue data - revenueByDate:', revenueByDate);
    }

    // BAR CHART - Top 5 Products
    if (Array.isArray(topProducts) && topProducts.length > 0) {
      try {
        const ctx2 = document.getElementById('topProductsChart').getContext('2d');
        new Chart(ctx2, {
          type: 'bar',
          data: {
            labels: topProducts.map(p => p.productName),
            datasets: [{
              label: 'Units Sold',
              data: topProducts.map(p => p.quantity),
              backgroundColor: '#28a745',
              borderColor: '#20c997',
              borderWidth: 2,
              borderRadius: 8
            }]
          },
          options: {
            ...chartConfig,
            indexAxis: 'y',
            plugins: { legend: { display: true } },
            scales: { x: { beginAtZero: true } }
          }
        });
        console.log('‚úì Bar chart rendered');
      } catch(e) { console.error('‚ùå Bar chart error:', e); }
    } else {
      console.warn('‚ö†Ô∏è No top products data - topProducts:', topProducts);
    }

    // PIE CHART - Categories
    if (Array.isArray(salesByCategory) && salesByCategory.length > 0) {
      try {
        const ctx3 = document.getElementById('categoryPieChart').getContext('2d');
        new Chart(ctx3, {
          type: 'pie',
          data: {
            labels: salesByCategory.map(c => c.category),
            datasets: [{
              data: salesByCategory.map(c => c.sales),
              backgroundColor: ['#28a745', '#20c997', '#0dcaf0', '#198754', '#fd7e14', '#dc3545', '#6f42c1', '#e83e8c', '#ffc107'],
              borderColor: '#fff',
              borderWidth: 2
            }]
          },
          options: {
            ...chartConfig,
            plugins: { legend: { position: 'bottom' } }
          }
        });
        console.log('‚úì Pie chart rendered');
      } catch(e) { console.error('‚ùå Pie chart error:', e); }
    } else {
      console.warn('‚ö†Ô∏è No category data - salesByCategory:', salesByCategory);
    }
  </script>

</body>
</html>
