<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <link href="/css/style.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Add Product - Isaac's Supermarket</title>
  <style>
    body { background-color: #f8f9fa; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
    .page-header { background: linear-gradient(135deg, #28a745 0%, #20c997 100%); color: white; padding: 2rem 0; margin-bottom: 2rem; border-radius: 0.5rem; box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3); }
    .page-header h1 { font-weight: 700; margin-bottom: 0.5rem; }
    .page-header p { font-size: 0.95rem; opacity: 0.95; margin: 0; }
    .form-container { max-width: 700px; margin: 0 auto; }
    .form-box { background: white; border-radius: 12px; padding: 40px; box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08); border: 1px solid #e8f1eb; }
    .form-control, .form-select { border-radius: 8px; border: 1px solid #dce7dd; transition: all 0.3s; font-size: 15px; }
    .form-control:focus, .form-select:focus { border-color: #28a745; box-shadow: 0 0 0 3px rgba(40, 167, 69, 0.1); }
    .form-label { font-weight: 600; color: #2d4737; font-size: 14px; margin-bottom: 8px; text-transform: uppercase; letter-spacing: 0.5px; }
    .form-text { color: #999; font-size: 13px; margin-top: 6px; }
    .btn-submit { background: #28a745; border: none; border-radius: 8px; padding: 12px 32px; font-weight: 700; height: 48px; font-size: 16px; transition: all 0.3s; }
    .btn-submit:hover { background: #20c997; transform: translateY(-2px); color: white; }
    .btn-cancel { background: #6c757d; border: none; border-radius: 8px; padding: 12px 32px; font-weight: 700; height: 48px; font-size: 16px; transition: all 0.3s; }
    .btn-cancel:hover { background: #5a6268; transform: translateY(-2px); }
    .form-section { margin-bottom: 30px; }
    .form-section-title { font-size: 16px; font-weight: 700; color: #0f5132; padding-bottom: 12px; border-bottom: 2px solid #e8f1eb; margin-bottom: 20px; }
    .file-input-wrapper { position: relative; overflow: hidden; border: 2px dashed #28a745; border-radius: 8px; padding: 20px; text-align: center; cursor: pointer; transition: all 0.3s; }
    .file-input-wrapper:hover { background: #f0f8f5; border-color: #20c997; }
    .file-input-wrapper input[type="file"] { display: none; }
    .file-input-icon { font-size: 32px; color: #28a745; margin-bottom: 8px; }
    .file-input-text { color: #666; font-weight: 600; }
    .file-input-text small { display: block; color: #999; margin-top: 4px; font-weight: 400; }
    .alert { border-radius: 8px; border: none; margin-bottom: 24px; }
    .form-row-group { display: grid; grid-template-columns: 1fr 1fr; gap: 20px; }
    @media (max-width: 768px) { .form-row-group { grid-template-columns: 1fr; } .form-box { padding: 24px; } }
  </style>
</head>
<body>

  <%- include('partials/adminnavbar') %>

  <!-- PAGE HEADER -->
  <div class="container-fluid mt-4 px-4">
    <div class="page-header">
      <div class="container-fluid">
        <h1><i class="bi bi-plus-circle"></i> Add New Product</h1>
        <p>Create a new product listing in your inventory</p>
      </div>
    </div>

    <!-- FORM CONTAINER -->
    <div class="form-container">
      <div class="form-box">

        <!-- ERROR MESSAGES -->
        <% if (typeof errors !== 'undefined' && errors && errors.length > 0) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <% errors.forEach(function(error) { %>
              <p class="mb-1"><%= error %></p>
            <% }); %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>

        <!-- SUCCESS MESSAGES -->
        <% if (typeof messages !== 'undefined' && messages && messages.length > 0) { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <% messages.forEach(function(message) { %>
              <p class="mb-1"><%= message %></p>
            <% }); %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>

        <!-- PRODUCT FORM -->
        <form action="/addProduct" method="POST" enctype="multipart/form-data">

          <!-- BASIC INFO SECTION -->
          <div class="form-section">
            <div class="form-section-title"><i class="bi bi-info-circle"></i> Product Information</div>
            
            <div class="mb-3">
              <label for="productName" class="form-label">Product Name</label>
              <input type="text" id="productName" class="form-control" name="productName" required placeholder="e.g., Fresh Organic Apples">
              <small class="form-text">Enter the name of the product as customers will see it</small>
            </div>

            <div class="form-row-group">
              <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <div class="input-group">
                  <span class="input-group-text">$</span>
                  <input type="number" id="price" class="form-control" name="price" step="0.01" min="0" required placeholder="0.00">
                </div>
                <small class="form-text">Set the selling price for this product</small>
              </div>

              <div class="mb-3">
                <label for="quantity" class="form-label">Initial Stock</label>
                <input type="number" id="quantity" class="form-control" name="quantity" min="0" required placeholder="0">
                <small class="form-text">Enter the quantity to add to inventory</small>
              </div>
            </div>
          </div>

          <!-- CATEGORY SECTION -->
          <div class="form-section">
            <div class="form-section-title"><i class="bi bi-tag"></i> Category</div>
            
            <div class="mb-3">
              <label for="categoryId" class="form-label">Product Category</label>
              <select id="categoryId" class="form-select" name="categoryId" required>
                <option value="" disabled selected>-- Select a category --</option>
                <% if (typeof categories !== 'undefined' && categories) { %>
                  <% categories.forEach(c => { %>
                    <option value="<%= c.id %>"><%= c.name %></option>
                  <% }) %>
                <% } %>
              </select>
              <small class="form-text">Choose the category that best fits this product</small>
            </div>
          </div>

          <!-- IMAGE SECTION -->
          <div class="form-section">
            <div class="form-section-title"><i class="bi bi-image"></i> Product Image</div>
            
            <div class="file-input-wrapper" onclick="document.getElementById('imageInput').click();">
              <div class="file-input-icon"><i class="bi bi-cloud-upload"></i></div>
              <div class="file-input-text">
                Click to upload or drag & drop
                <small>PNG, JPG, GIF up to 10MB</small>
              </div>
              <input type="file" id="imageInput" class="form-control" name="image" accept="image/*" required onchange="updateFileName(this)">
            </div>
            <small class="form-text d-block mt-3" id="fileName">No file selected</small>
          </div>

          <!-- ACTION BUTTONS -->
          <div class="d-grid gap-2 d-sm-flex justify-content-sm-between mt-4">
            <button type="submit" class="btn btn-submit btn-success flex-sm-grow-1">
              <i class="bi bi-check-lg"></i> Add Product
            </button>
            <a href="/inventory" class="btn btn-cancel btn-secondary flex-sm-grow-1">
              <i class="bi bi-x-lg"></i> Cancel
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    function updateFileName(input) {
      const fileName = document.getElementById('fileName');
      if (input.files && input.files[0]) {
        fileName.textContent = 'ðŸ“Ž ' + input.files[0].name + ' (' + (input.files[0].size / 1024).toFixed(2) + ' KB)';
      } else {
        fileName.textContent = 'No file selected';
      }
    }

    // Drag and drop functionality
    const fileWrapper = document.querySelector('.file-input-wrapper');
    fileWrapper.addEventListener('dragover', (e) => {
      e.preventDefault();
      fileWrapper.style.backgroundColor = '#f0f8f5';
      fileWrapper.style.borderColor = '#20c997';
    });
    fileWrapper.addEventListener('dragleave', () => {
      fileWrapper.style.backgroundColor = '';
      fileWrapper.style.borderColor = '#28a745';
    });
    fileWrapper.addEventListener('drop', (e) => {
      e.preventDefault();
      fileWrapper.style.backgroundColor = '';
      fileWrapper.style.borderColor = '#28a745';
      const files = e.dataTransfer.files;
      if (files.length > 0) {
        document.getElementById('imageInput').files = files;
        updateFileName(document.getElementById('imageInput'));
      }
    });
  </script>

</body>
</html>
