<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Supermarket App</title>

  <style>
    body {
      background: #f8fff4;
      font-family: "Poppins", Arial, sans-serif;
    }
    h2, h3, h4, h5, h6 { font-weight: 600; }

    .hero {
      background: url('/images/userbackground.png') center/cover no-repeat;
      padding: 120px 50px;
      border-radius: 15px;
      margin-bottom: 40px;
      color: #0a4205;
      position: relative;
    }

    .hero img.fruits {
      position: absolute;
      bottom: 0;
      right: 20px;
      width: 220px;
      opacity: 0.9;
    }

    .category-bar {
      display: flex;
      justify-content: center;
      gap: 15px;
      margin-bottom: 30px;
      flex-wrap: wrap;
    }

    .category-btn {
      padding: 12px 20px;
      background: white;
      border-radius: 30px;
      box-shadow: 0 3px 10px rgba(0,0,0,0.1);
      border: 1px solid #ddd;
      cursor: pointer;
      font-weight: 500;
      transition: 0.2s;
    }

    .category-btn:hover {
      background: #d7ffd8;
      transform: translateY(-3px);
    }

    .category-btn.active {
      background: #198754;
      color: #fff;
      border-color: #198754;
    }

    .product-card {
      border-radius: 16px;
      background: white;
      box-shadow: 0 4px 20px rgba(0,0,0,0.08);
      transition: 0.2s ease;
    }

    .product-card:hover { transform: scale(1.03); }

    .product-img {
      height: 160px;
      object-fit: contain;
      width: 100%;
      background: #f1f7ef;
      padding: 10px;
    }

    .out-overlay {
      position: absolute;
      top: 12px;
      left: 12px;
      padding: 6px 12px;
      background: #ff4b4b;
      color: white;
      font-size: 0.8rem;
      font-weight: bold;
      border-radius: 6px;
    }

    .out-disabled {
      opacity: 0.5;
      pointer-events: none;
    }
  </style>
</head>

<body>

  <%- include('partials/usernavbar') %>

  <div class="container mt-4">

    <div class="hero text-center">
      <h1>Fresh Organic Products</h1>
      <p>Natural, healthy groceries delivered to your home.</p>
      <img src="/images/fruits_banner.png" class="fruits">
    </div>

    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>

    <% if (added) { %>
      <div class="alert alert-success text-center">
        You added <strong><%= name %></strong> to your cart!
        (<a href="/cart" class="alert-link">View Cart</a>)
      </div>
    <% } %>

    <!-- CATEGORY FILTER BAR -->
    <div class="category-bar">

      <!-- Always show "All Products" -->
      <button class="category-btn active" data-category="all">All Products</button>

      <!-- Render categories safely -->
      <% if (typeof categories !== "undefined" && categories && categories.length > 0) { %>
        <% categories.forEach(c => { %>
          <button class="category-btn" data-category="<%= c.id %>">
            <%= c.name %>
          </button>
        <% }) %>
      <% } %>
    </div>

    <h2 class="text-center mb-4">Featured Products</h2>

    <div class="row g-4">

      <% products.forEach(p => { %>

        <div class="col-12 col-sm-6 col-md-4 col-lg-3 product-item"
             data-category="<%= p.categoryId %>">

          <div class="card product-card position-relative <%= p.quantity === 0 ? 'out-disabled' : '' %>">

            <% if (p.quantity === 0) { %>
              <div class="out-overlay">OUT OF STOCK</div>
            <% } %>

            <img src="/images/<%= p.image %>" class="product-img">

            <div class="card-body text-center">
              <h6 class="fw-bold mb-1">
                <a href="/product/<%= p.id %>" class="text-success text-decoration-none">
                  <%= p.productName %>
                </a>
              </h6>

              <p><strong>Stock:</strong> <%= p.quantity %></p>
              <p><strong>Price:</strong> $<%= p.price.toFixed(2) %></p>

              <% if (p.quantity > 0) { %>
                <form action="/add-to-cart/<%= p.id %>" method="POST">
                  <div class="input-group mb-3 justify-content-center">

                    <button class="btn btn-outline-success qty-btn"
                            data-id="<%= p.id %>" data-delta="-1" type="button">âˆ’</button>

                    <input type="text" id="qty-<%= p.id %>"
                           name="quantity" value="1"
                           class="form-control text-center"
                           style="width:60px;" readonly>

                    <button class="btn btn-outline-success qty-btn"
                            data-id="<%= p.id %>" data-delta="1"
                            data-max="<%= p.quantity %>"
                            type="button">+</button>
                  </div>

                  <button class="btn btn-success w-100">Add to Cart</button>
                </form>
              <% } else { %>
                <button class="btn btn-secondary w-100" disabled>Unavailable</button>
              <% } %>

            </div>
          </div>
        </div>

      <% }) %>
    </div>
  </div>

  <script>
    // Quantity controls
    document.addEventListener("click", e => {
      if (!e.target.classList.contains("qty-btn")) return;

      const id = e.target.dataset.id;
      const delta = parseInt(e.target.dataset.delta);
      const max = parseInt(e.target.dataset.max);
      const input = document.getElementById("qty-" + id);

      let qty = parseInt(input.value);
      qty += delta;

      if (qty < 1) qty = 1;
      if (!isNaN(max) && qty > max) qty = max;

      input.value = qty;
    });

    // Live category filtering
    document.querySelectorAll(".category-btn").forEach(btn => {
      btn.addEventListener("click", () => {

        const selected = btn.dataset.category;

        document.querySelectorAll(".category-btn")
          .forEach(b => b.classList.remove("active"));

        btn.classList.add("active");

        document.querySelectorAll(".product-item")
          .forEach(item => {
            if (selected === "all" || item.dataset.category === selected) {
              item.classList.remove("d-none");
            } else {
              item.classList.add("d-none");
            }
          });
      });
    });
  </script>

</body>
</html>
