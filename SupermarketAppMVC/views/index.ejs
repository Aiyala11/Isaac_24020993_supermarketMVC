<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head', { title: 'Home' }) %>
  <body>
    <%- include('partials/navbar', { brand: 'Supermarket & Fines' }) %>

    <main class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="card shadow-lg border-0">
            <div class="card-body text-center py-5">
              <h1>Welcome to Supermarket & Fines</h1>
              <% if (user) { %>
                <p class="lead text-muted mt-3">Hi <%= user.name || user.email %>, welcome back!</p>
                <div class="mt-4">
                  <% if (user.role === "admin") { %>
                    <a href="/admin/dashboard" class="btn btn-primary btn-lg me-2">Admin Dashboard</a>
                    <a href="/inventory" class="btn btn-secondary btn-lg">Manage Inventory</a>
                  <% } else { %>
                    <a href="/shopping" class="btn btn-primary btn-lg me-2">Shop Products</a>
                    <a href="/fines" class="btn btn-warning btn-lg">View Fines</a>
                  <% } %>
                </div>
              <% } else { %>
                <p class="lead text-muted mt-3">Your one-stop solution for shopping and fine payments</p>
                <div class="mt-4">
                  <a href="/login" class="btn btn-primary btn-lg me-2">Login</a>
                  <a href="/register" class="btn btn-outline-primary btn-lg">Register</a>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </main>

    <%- include('partials/footer') %>
  </body>
</html>