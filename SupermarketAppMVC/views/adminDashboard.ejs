<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <%- include('partials/navbar') %>
    <main class="container mt-5">
      <h2>Admin Dashboard</h2>
      <div class="row mt-4">
        <div class="col-md-6">
          <div class="admin-section">
            <h4>Users</h4>
            <div class="list-group">
              <% if (users && users.length) { %>
                <% users.forEach(u => { %>
                  <div class="list-group-item">
                    <h6 class="mb-1"><%= u.name || u.username || u.email %></h6>
                    <small class="text-muted"><%= u.email %> • <span class="badge bg-secondary"><%= u.role %></span></small>
                  </div>
                <% }) %>
              <% } else { %>
                <div class="alert alert-info">No users found</div>
              <% } %>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="admin-section">
            <h4>All Fines</h4>
            <div class="list-group">
              <% if (fines && fines.length) { %>
                <% fines.forEach(f => { %>
                  <div class="list-group-item">
                    <div class="d-flex justify-content-between">
                      <div>
                        <h6 class="mb-1"><%= f.userName %></h6>
                        <small class="text-muted"><%= f.typeName %> • <%= f.description %></small>
                      </div>
                      <strong class="text-danger">$<%= Number(f.amount).toFixed(2) %></strong>
                    </div>
                  </div>
                <% }) %>
              <% } else { %>
                <div class="alert alert-info">No fines found</div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
