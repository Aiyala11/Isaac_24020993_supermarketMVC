<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Assign Fine</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <%- include('partials/navbar') %>
    <div class="container mt-4">
      <h2>Assign Fine to User</h2>
      <form method="post" action="/admin/fine-user">
        <div class="mb-3">
          <label>User</label>
          <select name="userId" class="form-select">
            <% users.forEach(u => { %>
              <option value="<%= u.userId %>"><%= u.name || u.username || u.email %></option>
            <% }) %>
          </select>
        </div>
        <div class="mb-3">
          <label>Fine Type</label>
          <select name="fineTypeId" class="form-select">
            <% fineTypes.forEach(ft => { %>
              <option value="<%= ft.id %>"><%= ft.typeName %></option>
            <% }) %>
          </select>
        </div>
        <div class="mb-3">
          <label>Amount</label>
          <input name="amount" class="form-control" />
        </div>
        <div class="mb-3">
          <label>Description</label>
          <textarea name="description" class="form-control"></textarea>
        </div>
        <button class="btn btn-primary">Assign Fine</button>
      </form>
    </div>
  </body>
</html>
