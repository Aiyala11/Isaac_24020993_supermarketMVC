<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
<%- include('partials/navbar') %>

  <main class="container mt-5">
    <h2>Your Shopping Cart</h2>
    <% if (!cart || cart.length === 0) { %>
      <div class="alert alert-info">Your cart is empty. <a href="/shopping" class="alert-link">Continue shopping</a></div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>Item</th>
              <th>Type</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Total</th>
            </tr>
          </thead>
          <tbody>
            <% let total = 0; %>
            <% cart.forEach(item => { %>
              <tr>
                <td>
                  <% if (item.type === 'product') { %>
                    <%= item.productName %>
                  <% } else { %>
                    <%= item.description || 'Fine' %>
                  <% } %>
                </td>
                <td><span class="badge bg-info"><%= item.type %></span></td>
                <td>$<%= Number(item.price).toFixed(2) %></td>
                <td><%= item.quantity %></td>
                <td><strong>$<%= (Number(item.price) * item.quantity).toFixed(2) %></strong></td>
              </tr>
              <% total += Number(item.price) * item.quantity; %>
            <% }) %>
          </tbody>
        </table>
      </div>
      <div class="row mt-4">
        <div class="col-md-6"></div>
        <div class="col-md-6">
          <div class="card border-0 bg-light">
            <div class="card-body">
              <h5 class="card-title">Order Summary</h5>
              <hr>
              <div class="d-flex justify-content-between">
                <span>Subtotal:</span>
                <strong>$<%= total.toFixed(2) %></strong>
              </div>
              <hr>
              <h6>Total: <strong class="text-primary">$<%= total.toFixed(2) %></strong></h6>
              <button class="btn btn-primary w-100 mt-3">Proceed to Checkout</button>
              <a href="/shopping" class="btn btn-outline-secondary w-100 mt-2">Continue Shopping</a>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </main>
</body>
</html>
